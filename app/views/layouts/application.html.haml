!!!
%html{:xmlns => 'xmlns:fb="http://www.facebook.com/2008/fbml"'}

  %head
    %title
      = yield(:title) || "Untitled"
    %meta{"http-equiv"=>"Content-Type", :content=>"text/html; charset=utf-8"}/
    = stylesheet_link_tag 'compiled/application', "compiled/public/#{controller.controller_name}"
    = javascript_include_tag :defaults, 'http://ajax.googleapis.com/ajax/libs/webfont/1/webfont.js'
    = csrf_meta_tag
    = yield(:head)

  %body
    #container
      - flash.each do |name, msg|
        = content_tag :div, msg, :id => "flash_#{name}"

      - if show_title?
        %h1= yield(:title)

      = yield
    
    #footer
      .nav
        = link_to "About Givey.org", :action => "index"
      .nav
        = link_to "Terms & Conditions", :action => "index"
      .nav
        = link_to "Privacy Policy", :action => "index"
        
      #copyright
        (c) Givey.org 2011