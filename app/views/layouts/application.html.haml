!!!
%html{:xmlns => 'xmlns:fb="http://www.facebook.com/2008/fbml"'}
  %head
    %title
      = yield(:title) || "Givey.org Admin System"
    %meta{"http-equiv"=>"Content-Type", :content=>"text/html; charset=utf-8"}/
    = stylesheet_link_tag 'compiled/application', 'jquery/flick/jquery-ui', "compiled/public/#{controller.controller_name}"
    = javascript_include_tag :defaults, 'http://ajax.googleapis.com/ajax/libs/webfont/1/webfont.js', 'jquery-ui.min.js'
    = csrf_meta_tag
    = yield(:head)

    - if flash.detect {|name, msg| !msg.blank?}    
      :javascript
        $(document).ready(function() {
          $('#flash').slideDown(500,function(){
            window.setTimeout('hide_flash()',4000);
          }).click(function(){
            $('#flash').slideUp('fast');
          })
        });
        
        function hide_flash(){
          $('#flash').slideUp();
        }

  %body
    #main
      #flash
        - flash.each do |name, msg|
          = content_tag :div, msg, :id => "flash_#{name}"
      
      #header
        - if current_user && !hide_login_info?
          = image_tag current_user.profile_pic
          = "Hi #{current_user.name}."
          = link_to "Not #{current_user.first_name}?", signout_path, :id => "log_out" 
      
      #container
        = yield
    
    #footer
      #navs
        .nav
          = link_to "About Givey.org", '#'
        .nav
          = link_to "Terms & Conditions", '#'
        .nav
          = link_to "Privacy Policy", '#'
        .nav
          = link_to "Non Profits", npos_path
      
        - if current_user && current_user.admin?
          .nav
            = link_to "Admin Facility", admin_index_path
          
      #copyright
        (c) Givey.org 2011
    
    #fb-root
    :javascript
      window.fbAsyncInit = function() {
        FB.init({appId: '#{APP_CONFIG[:facebook]['app_id']}', status: true, cookie: true,
                 xfbml: true});
      };
      (function() {
        var e = document.createElement('script'); e.async = true;
        e.src = document.location.protocol +
          '//connect.facebook.net/en_US/all.js';
        document.getElementById('fb-root').appendChild(e);
      }());

    
    