!!!
%html{:xmlns => 'xmlns:fb="http://www.facebook.com/2008/fbml"'}
  %head
    %title
      = yield(:title) || "Givey.org Admin System"
    %meta{"http-equiv"=>"Content-Type", :content=>"text/html; charset=utf-8"}
    = stylesheet_link_tag 'compiled/application', 'jquery/flick/jquery-ui', "compiled/public/#{controller.controller_name}", 'supersized'
    = javascript_include_tag :defaults, 'jquery-ui.min.js', 'jquery.tools.min.js',  'jquery.mousewheel', 'jquery.jscrollpane.min', 'supersized.3.0.core.js'
    = javascript_include_tag "controllers/#{controller.controller_name}"
    = javascript_include_flash
    = csrf_meta_tag
    = yield(:head)
    :javascript
      randomSlide = [{image : '#{get_background}'}]
    = render :partial => '/layouts/get_satisfaction_javascript'

  %body
    #content-wrapper
      #main
        #flash
          #flash_close
          - flash.each do |name, msg|
            = content_tag :div, msg, :id => "flash_#{name}"

        - unless (controller.controller_name == 'home' && !current_user)
          %table#header
            %tr
              %td.left
                = link_to image_tag("givey_logo.png", :title => "Givey.org"), root_url
                = image_tag "spinner.gif", :id => "processing_spinner"
              %td#candidate_supporter_msg
              %td.right
                - if current_user && !hide_login_info?
                  = link_to "Not #{current_user.first_name}? Log Out.", signout_path, :id => "log_out" 
      
        #container
          = yield
    
        #footer
          #navs
            .nav
              = link_to "About Givey.org", '#'
            .nav
              = link_to "Terms & Conditions", '#'
            .nav
              = link_to "Privacy Policy", '#'
            .nav
              = link_to "Non Profits", npos_path
      
            - if current_user && current_user.admin?
              .nav
                = link_to "Admin Facility", admin_index_path
                
            - unless current_user && production?
              .nav
                = link_to "Reset *Sparks", sparks_reset_path, :confirm => "Are you sure you want to remove all sparks?" 
          
          #copyright
            (c) Givey.org 2011
    
    #supersized
    
    #fb-root
    %script{:src => "http://connect.facebook.net/en_US/all.js"}
    :javascript
      FB.init({
        appId  : "#{APP_CONFIG[:facebook]['app_id']}",
        status : true, // check login status
        cookie : true, // enable cookies to allow the server to access the session
        xfbml  : true  // parse XFBML
      });
      
    = yield(:feet)

    
    