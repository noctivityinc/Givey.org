- title "#{current_user.name}'s Trusted Friends Game", false

- content_for :head do
  :javascript
    var retryCount = 0;
    var t;
    $(document).ready(function() {
        create_game();

        $('#wait_btn').click(function() {
          return false;
        });
        
        $('#next_btn').click(function() {
          location.href = $(this).attr('rel')
          return false;
        });
    });
    
    function create_game() {
      if (retryCount <= 1 ){
        retryCount += 1;
        
        t = window.setTimeout('create_game()',30000);
        
        url = $('#new').attr('givey:url');
        $.post(url, function(data) {
           if (data.status == 'complete') {
             clearTimeout(t);
             $('.wait').hide();
             $('#next_btn').attr('rel',data.url).fadeIn();
             $('.title').text("We're Ready For You!").css('color','red')
           } 
         }); } else {
          $('#please_wait').hide();
          $('#try_later').show();
       }
    }
    
#game
  #new{'givey:url' => "#{games_path(@campaign)}"}
    #copy
      #please_wait.trans
        %h1.title Please Wait. We're Creating Your Game...
      
        %h2 But let's not forget why we're here.
        
        %h2 Together we need to raise $25,000.
        
        %h2 And when we do, the #1 most likely person to save the world will decide what to do with it.  
        
        %h2 But we need your help.  After your game, please donate as little as $5.
        
        %h2 Together we can change the world.  
        
        %p.wait
          Your game should be ready in a minute or so
        
        .spinner.wait
          = image_tag "spinner.gif", :title => "Spinner"
          
        #actions
          = button_to "Please Wait...", '#', :id => "wait_btn", :disabled => true, :class => "wait"
          = button_to "Ready?  Let's Play >>", '#', :id => "next_btn", :class => "button", :rel => "" 
          
      #try_later.trans
        %h1 Sorry, but Facebook seems overloaded with givers right now
        
        %p Please give it a few minutes and then refresh this page.  Hopefully the traffic will have died down by then.
        

      #npos
        - Npo.all.each do |n|
          .npo= image_tag n.logo.url(:thumb)