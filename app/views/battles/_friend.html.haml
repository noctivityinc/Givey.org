.card.clickable{'givey:uid' => "#{friend.uid}", 'givey:battle' => "#{@battle.id}"}
  .frame
    .box
      .top
        .profile_pic= image_tag friend.profile.details.pic_square
        .name= friend.profile.details.name

      - if stuff_to_display(friend)
        .sc_menu_wrapper
          .header
            RANDOM FACTOIDS
          .photos
            - random_photos(friend).each do |p|
              = image_tag p.src, :alt => p.caption 
          .stats
            .items
              - friend.profile.details.keys.each_with_index do |k,ndx|
                - unless dont_include(friend, k)
                  .item(class="#{(ndx % 2 == 1) ? 'even' : 'odd'}")
                    .label= k.humanize
                    .value= display_value(friend, k)
      - else
        .nothing.sc_menu_wrapper
          .pic= image_tag friend.profile.details.pic_big ? friend.profile.details.pic_big : friend.profile.details.pic