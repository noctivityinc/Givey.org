.frame
  .box
    .top
      .profile_pic= image_tag challenger.pic_square
      .name= challenger.name

    - if stuff_to_display(challenger)
      .sc_menu_wrapper
        .header
          RANDOM FACTOIDS
        .photos
          - random_photos(challenger).each do |p|
            = image_tag p.src, :alt => p.caption 
        .stats
          .items
            - challenger.keys.each_with_index do |k,ndx|
              - unless dont_include(challenger, k)
                .item(class="#{(ndx % 2 == 1) ? 'even' : 'odd'}")
                  .label= k.humanize
                  .value= display_value(challenger, k)
    - else
      .nothing.sc_menu_wrapper
        .pic= image_tag challenger.pic_big ? challenger.pic_big : challenger.pic