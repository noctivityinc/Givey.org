<% title "Donations" %>

<table>
  <tr>
    <th>User</th>
    <th>Game</th>
    <th>Amount</th>
    <th>Donated At</th>
    <th>Wepay</th>
    <th>Transaction</th>
    <th>Event</th>
  </tr>
  <% for donation in @donations %>
    <tr>
      <td><%= donation.user_id %></td>
      <td><%= donation.game_id %></td>
      <td><%= donation.amount %></td>
      <td><%= donation.donated_at %></td>
      <td><%= donation.wepay_id %></td>
      <td><%= donation.transaction_id %></td>
      <td><%= donation.event %></td>
      <td><%= link_to "Show", donation %></td>
      <td><%= link_to "Edit", edit_donation_path(donation) %></td>
      <td><%= link_to "Destroy", donation, :confirm => 'Are you sure?', :method => :delete %></td>
    </tr>
  <% end %>
</table>

<p><%= link_to "New Donation", new_donation_path(donation) %></p>
