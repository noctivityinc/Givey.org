- title "The Battles", false

#battle
  #show
    #copy
      .trans
        %h1.title Of these friends, who's more likely to save the world?

        %h2.subtitle
          - if finals?
            Finals!
          - else 
            = "Round #{@game.duels.played.size+1} of #{total_battles}."

      #playing_field
        = render(:partial => "friend", :collection => @friends)

      - if allow_skip?
        #skip
          = link_to "One Time Skip", '#', :id => "replace_cards" 

      #winners
        .winner
        = render :partial => "winners"
