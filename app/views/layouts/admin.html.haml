!!!
%html{:xmlns => 'xmlns:fb="http://www.facebook.com/2008/fbml"'}
  %head
    %title
      = yield(:title) || "Givey.org Admin"
    %meta{"http-equiv"=>"Content-Type", :content=>"text/html; charset=utf-8"}/
    = stylesheet_link_tag 'compiled/application', 'compiled/admin/admin', "compiled/admin/#{controller.controller_name}", 'supersized'
    = javascript_include_tag 'http://ajax.googleapis.com/ajax/libs/webfont/1/webfont.js'
    = javascript_include_tag :defaults, 'supersized.3.0.core.js', :cache => true
    = csrf_meta_tag
    = yield(:head)

  %body
    #content-wrapper
      #admin
        #main
          #flash
            - flash.each do |name, msg|
              = content_tag :div, msg, :id => "flash_#{name}"
      
          #header.row
            .fleft
              - if current_user
                = image_tag current_user.profile.details.pic_square, :class => "profile_pic"
                = "Hello Admin named #{current_user.name}."
                = link_to "Not #{current_user.first_name}?", signout_path
            .fright.cabin
              = link_to "Givey.org Admin System", admin_index_path
      
          #container
            - if show_title?
              %h1.trans= yield(:title)
          
            = yield
    
        #footer
          #navs
            .nav
              = link_to "About Givey.org", '#'
            .nav
              = link_to "Terms & Conditions", '#'
            .nav
              = link_to "Privacy Policy", '#'
            .nav
              = link_to "Non Profits", npos_path
          
          #copyright
            (c) Givey.org 2011
          
